<!DOCTYPE html>
<html>
  <head>
    <title>TailApp Admin Dashboard</title>
    <%= stylesheet_link_tag "style", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
    <%= javascript_include_tag 'bundles/bundle', defer: true %>
    <%= csrf_meta_tags %>
  </head>

<body x-data="{ page: 'signin', 'loaded': true, 'darkMode': true, 'stickyMenu': false, 'sidebarToggle': false, 'scrollTop': false }" x-init="
          darkMode = JSON.parse(localStorage.getItem('darkMode'));
          $watch('darkMode', value => localStorage.setItem('darkMode', JSON.stringify(value)))" :class="{'dark text-bodydark bg-boxdark-2': darkMode === true}" class="">
    <!-- ===== Preloader Start ===== -->
      <%= render 'admin/shared/preloader' %> 
    <!-- ===== Preloader End ===== -->

    <!-- ===== Page Wrapper Start ===== -->
    <div class="flex h-screen overflow-hidden">

      <!-- ===== Sidebar Start ===== -->
        <%= render 'admin/shared/sidebar' %>
      <!-- ===== Sidebar End ===== -->

      <!-- ===== Content Area Start ===== -->
      <div class="relative flex flex-1 flex-col overflow-y-auto overflow-x-hidden">

        <!-- ===== Header Start ===== -->
          <%= render 'admin/shared/header' %> 
        <!-- ===== Header End ===== -->

        <%= yield %>

      </div>
      <!-- ===== Content Area End ===== -->
    </div>
    <!-- ===== Page Wrapper End ===== -->
  
</body>

</html>
